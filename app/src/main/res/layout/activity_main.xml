<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Floating Music Button (Top Right) -->
    <ImageButton
        android:id="@+id/btnMusicFloat"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:background="@drawable/circle_button"
        android:src="@android:drawable/ic_lock_silent_mode_off"
        android:scaleType="centerInside"
        android:padding="12dp"
        android:elevation="6dp"
        android:contentDescription="Music Settings" />

    <!-- Statistics Icon Button (Top Right, below music) -->
    <ImageButton
        android:id="@+id/btnStatsIcon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_below="@id/btnMusicFloat"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/circle_button"
        android:src="@android:drawable/ic_menu_info_details"
        android:scaleType="centerInside"
        android:padding="12dp"
        android:elevation="6dp"
        android:contentDescription="Statistics" />

    <!-- Main Content Container -->
    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slidr"
            android:textSize="42sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/tvTotalStars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â­ 0 Stars"
            android:textSize="24sp"
            android:textColor="#FFD700"
            android:textStyle="bold"
            android:layout_marginBottom="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Mode"
            android:textSize="20sp"
            android:textColor="#666666"
            android:layout_marginBottom="30dp"/>

        <Button
            android:id="@+id/btnClassic"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:text="ðŸŽ® Classic Mode"
            android:textSize="18sp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#4CAF50"/>

        <Button
            android:id="@+id/btnStoryMode"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:text="ðŸ“– Story Mode"
            android:textSize="18sp"
            android:backgroundTint="#2196F3"/>

    </LinearLayout>

    <!-- Story Mode Selection Frame (Hidden by default) -->
    <FrameLayout
        android:id="@+id/storyModeFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0FFFFFF"
        android:visibility="gone"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:background="#FFFFFF"
            android:layout_margin="32dp"
            android:elevation="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Story"
                android:textSize="28sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:layout_marginBottom="30dp"/>

            <Button
                android:id="@+id/btnOnePiece"
                android:layout_width="280dp"
                android:layout_height="65dp"
                android:text="ðŸ´â€â˜ ï¸ One Piece"
                android:textSize="18sp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#FF6B35"/>

            <Button
                android:id="@+id/btnDragonBall"
                android:layout_width="280dp"
                android:layout_height="65dp"
                android:text="ðŸ‰ Dragon Ball Z"
                android:textSize="18sp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#FFA500"/>

            <Button
                android:id="@+id/btnBleach"
                android:layout_width="280dp"
                android:layout_height="65dp"
                android:text="âš”ï¸ Bleach"
                android:textSize="18sp"
                android:layout_marginBottom="25dp"
                android:backgroundTint="#4169E1"/>

            <Button
                android:id="@+id/btnBackFromStory"
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:text="â† Back"
                android:textSize="16sp"
                android:backgroundTint="#9E9E9E"/>

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>